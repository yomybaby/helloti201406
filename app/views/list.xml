<Alloy>
	<Window class="container">
		<ListView id="listView">
			<HeaderView>
                <View backgroundColor="#DDD" height="Ti.UI.SIZE">
                    <Label>Header View</Label>
                </View>>
            </HeaderView>
			<Templates>

                <!-- Define your item templates within the Templates tags or use the
                     Require tag to include a view that only contains an ItemTemplate -->

                <ItemTemplate name="template">
                    <ImageView bindId="pic" class="icon" />
                    <Label bindId="usernameLabel" class="username" />
                    <Label bindId="dateLabel" class="date" />
                    <Label bindId="contentLabel" class="content"/>
                </ItemTemplate>
                <ItemTemplate name="noPicTemplate">
                    <Label bindId="usernameLabel" class="username" />
                    <Label bindId="dateLabel" class="date" />
                    <Label bindId="contentLabel" class="content"/>
                </ItemTemplate>

            </Templates>
	        <ListSection id="section">
	        </ListSection>
	    </ListView>
	</Window>
</Alloy>